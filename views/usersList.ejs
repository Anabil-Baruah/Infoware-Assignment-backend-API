<%- include('layouts/header.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <% if(message ) { %>
                    <div class="alert alert-<%= message.type %> dismissible fade show my-4" role="alert">
                        <strong>Success!</strong>
                        <%= message.message %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                    <% } %>
                      
                        <table class="table my-4">

                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <% if(user !='' ){ %>
                                <tbody>
                                    <% user.forEach((row,index)=>{ %>
                                        <tr>
                                            <th scope="row">
                                                <%= index+1 %>
                                            </th>
                                            <td>

                                            </td>
                                            <td>
                                                <%= row.name %>
                                            </td>
                                            <td>
                                                <%= row.email %>
                                            </td>
                                            <td>
                                                <%= row.phone %>
                                            </td>

                                            <td>
                                                <a href="/edit/<%= row._id %>" class="text-success"><i
                                                        class="fas fa-edit fa-lg mx-1"></i></a>
                                                <a href="/delete/<%= row._id %>" class="text-danger"><i
                                                        class="fas fa-trash fa-lg mx-1"></i></a>
                                            </td>
                                        </tr>
                                        <% }) %>

                                </tbody>

                        </table>
                        <% }else { %>

                            <h1>No users found in the db</h1>
                            <% } %>
            </div>
        </div>
    </div>
    <%- include('layouts/footer.ejs') %>